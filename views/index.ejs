<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- bootstrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <!-- CSS -->
        <link rel="stylesheet" href="/styles/main.css">
        <title>ForkThisRecipe</title>
    </head>

    <body>
        <div id="main-container">
            <div id="header">
                <h1>ForkThisRecipe</h1>
                <h2>Hello, Guest</h2>
                <div id="menu-bar">
                    <form style="margin-left: 15px; width: 20%;" action="/" method="POST">
                        <!-- color indicating which page the user is on -->
                        <button style="color: rgb(19, 157, 255);">Recipes</button>
                    </form>
                    <form style="margin-left: 15px; width: 30%;" action="/submit" method="POST">
                        <button>Submit a Recipe</button>
                    </form>
                    <form style="margin-left: 40px; width: 20%;" action="/login" method="POST">
                        <button>Log In</button>
                    </form>
                    <form style="margin-left: 0px; width: 20%" action="/about" method="POST">
                        <button>About</button>
                    </form>
                    <div id="blank"></div>
                    <form action="/search" method="POST">
                        <!-- bootstrap search icon -->
                        <input type="text" id="search" name="search" placeholder=" Find a recipe...">
                        <button type="submit" id="search-icon"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                        </svg></button>
                    </form>
                </div>
            </div>
            <div id="content">
                <% if (recipes && recipes.length) { %>
                    <div class="recipes">
                        <% recipes.forEach(r => { %>
                            <div class="recipe-card">
                                <div class="recipe-image">Image</div>
                                <div class="recipe-content">
                                    <div class="recipe-header">
                                        <h3><a href="/recipes/<%= r.id %>"><%= r.title %></a></h3>
                                        
                                        <% if (r.duration < 20) { %>
                                        <h3>Estimated time: 10 minutes</h3>
                                        <% } else if (r.duration < 30) { %>
                                        <h3>Estimated time: 20 minutes</h3>
                                        <% } else if (r.duration < 45) { %>
                                        <h3>Estimated time: 30 minutes</h3>
                                        <% } else if (r.duration < 60) { %>
                                        <h3>Estimated time: 45 minutes</h3>
                                        <% } else if (r.duration < 120) { %>
                                        <h3>Estimated time: 1 hour</h3>
                                        <% } else if (r.duration < 240) { %>
                                        <h3>Estimated time: 2 hours</h3>
                                        <% } else { %>
                                        <h3>Estimated time: 4+ hours</h3>
                                        <% } %>
                                        
                                        <% if (r.difficulty == 1) { %>
                                        <h3>Difficulty Level: &#11088</h3>
                                        <% } else if (r.difficulty == 2) { %>
                                        <h3>Difficulty Level: &#11088&#11088</h3>
                                        <% } else if (r.difficulty == 3) { %>
                                        <h3>Difficulty Level: &#11088&#11088&#11088</h3>
                                        <% } else if (r.difficulty == 4) { %>
                                        <h3>Difficulty Level: &#11088&#11088&#11088&#11088</h3>
                                        <% } else { %>
                                        <h3>Difficulty Level: &#11088&#11088&#11088&#11088&#11088</h3>
                                        <% } %>
                                    </div>
                                    <div class="recipe-information">
                                        <h3 style="margin-top: 20px; font-size: 24px;">Ingredients</h3>
                                        <h3 style="margin-top: 10px; margin-bottom: 10px; font-weight: 400;"><%= r.ingredients %></h3>
                                        <h3 style="font-size: 24px;">Instructions</h3>
                                        <h3 style="margin-top: 10px; margin-bottom: 20px; font-weight: 400;"><%= r.instructions %></h3>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <p>No recipes found.</p>
                <% } %>
            </div>
        </div>
    </body>
</html>